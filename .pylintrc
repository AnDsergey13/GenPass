[Output]
output-format = colorized

[Main]
; Virtual environment
init-hook =
    try: import pylint_venv
    except ImportError: pass
    else: pylint_venv.inithook(force_venv_activation=True)
; C extentions
extension-pkg-allow-list = PyQt6
disable =

    ; https://pylint.pycqa.org/en/latest/faq.html#which-messages-should-i-disable-to-avoid-duplicates-if-i-use-other-popular-linters

    ; Duplicates with flake8:pycodestyle
    ; bad-indentation,
    ; bare-except,
    ; line-too-long,
    ; missing-final-newline,
    ; multiple-statements,
    ; singleton-comparison,
    ; trailing-whitespace,
    ; unnecessary-semicolon,
    ; unneeded-not is not covered by flake8
    ; unneeded-not,
    ; wrong-import-position,

    ; Duplicates with flake8:pyflakes
    ; undefined-variable,
    ; unused-import,
    ; unused-variable,

    ; Do not show TODO, FIXME comments
    fixme,

    ; Docstrings (7 + 0 + 35 + 4)
    missing-module-docstring,
    ; missing-class-docstring,
    missing-function-docstring,
    empty-docstring,

    ; Long lines (22)
    line-too-long,

    ; Short names (9)
    invalid-name,

    ; if, else, return (9 + 3)
    no-else-return,
    inconsistent-return-statements,

    ; (1)
    consider-using-in,

    ; Global variables (2)
    invalid-name,
    global-statement,

    ; Exceptions (1)
    bare-except,

    ; Imports (0)
    import-error,

    ; Using OOP incorrectly (0 + 0)
    ; unused-private-member,
    ; protected-access,

[Format]
; Using tabs instead spaces
indent-string = \t
