[Output]
output-format = colorized

[Main]
disable =
    ; https://pylint.pycqa.org/en/latest/faq.html#which-messages-should-i-disable-to-avoid-duplicates-if-i-use-other-popular-linters
    ; to avoid duplicates with flake8:pycodestyle
    bad-indentation,
    bare-except,
    line-too-long,
    missing-final-newline,
    multiple-statements,
    singleton-comparison,
    trailing-whitespace,
    unnecessary-semicolon,
    ; unneeded-not is not covered by flake8
    ; unneeded-not,
    wrong-import-position,

    ; to avoid duplicates with flake8:pyflakes
    undefined-variable,
    unused-import,
    unused-variable,

    missing-module-docstring,
    ; missing-class-docstring,
    missing-function-docstring,
    empty-docstring,
    ; invalid-name,
    ; import-error,
    ; using OOP incorrectly
    ; unused-private-member,
    ; protected-access,
    ; do not show TODO, FIXME comments
    fixme,
    no-else-return,
    ; inconsistent-return-statements,

[Format]
indent-string = \t
